<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.muenje.ui.lessonsfragmentcontainer.LessonsFragmentContainerViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.lessonsfragmentcontainer.LessonsFragmentContainer">

        <TextView
            android:id="@+id/lesson_container_header_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.fullLesson.title}"
            tools:text="IME LEKCIJE"
            android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lesson_container_header_text_view"
            app:layout_constraintBottom_toTopOf="@id/lesson_containter_slash_text_view"/>

        <TextView
            android:id="@+id/lesson_containter_slash_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="/" />

        <TextView
            android:id="@+id/lesson_current_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            tools:text="1"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/lesson_containter_slash_text_view" />

        <TextView
            android:id="@+id/lesson_total_page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/lesson_containter_slash_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>