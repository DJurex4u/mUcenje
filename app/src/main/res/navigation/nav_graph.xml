<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.muenje.ui.loginfragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_profilFragment"
            app:destination="@id/profilFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profilFragment"
        android:name="com.example.muenje.ui.profilfragment.ProfileFragment"
        android:label="fragment_profil"
        tools:layout="@layout/fragment_profil" >
        <action
            android:id="@+id/action_profilFragment_to_postignucaFragment"
            app:destination="@id/postignucaFragment" />
        <action
            android:id="@+id/action_profilFragment_to_misijeFragment"
            app:destination="@id/misijeFragment" />
        <argument
            android:name="user"
            app:argType="com.example.muenje.data.entities.User" />
    </fragment>
    <fragment
        android:id="@+id/postignucaFragment"
        android:name="com.example.muenje.PostignucaFragment"
        android:label="fragment_postignuca"
        tools:layout="@layout/fragment_postignuca" />
    <fragment
        android:id="@+id/misijeFragment"
        android:name="com.example.muenje.ui.misijefragment.MissionsFragment"
        android:label="fragment_misije"
        tools:layout="@layout/fragment_misije" >
        <action
            android:id="@+id/action_misijeFragment_to_lekcijeFragment"
            app:destination="@id/lekcijeFragment" />
        <action
            android:id="@+id/action_misijeFragment_to_izazoviFragment"
            app:destination="@id/izazoviFragment" />
    </fragment>
    <fragment
        android:id="@+id/lekcijeFragment"
        android:name="com.example.muenje.LekcijeFragment"
        android:label="fragment_lekcije"
        tools:layout="@layout/fragment_lekcije" >
        <action
            android:id="@+id/action_lekcijeFragment_to_lekcijaFragmentContainer"
            app:destination="@id/lekcijaFragmentContainer" />
    </fragment>
    <fragment
        android:id="@+id/izazoviFragment"
        android:name="com.example.muenje.IzazoviFragment"
        android:label="fragment_izazovi"
        tools:layout="@layout/fragment_izazovi" >
        <action
            android:id="@+id/action_izazoviFragment_to_izazovFragment"
            app:destination="@id/izazovFragment" />
    </fragment>
    <fragment
        android:id="@+id/izazovFragment"
        android:name="com.example.muenje.IzazovFragment"
        android:label="fragment_izazov"
        tools:layout="@layout/fragment_izazov" />
    <action
        android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true" />
    <fragment
        android:id="@+id/lekcijaFragmentContainer"
        android:name="com.example.muenje.ui.lekcijafragmentcontainer.LekcijaFragmentContainer"
        android:label="fragment_lekcija_container"
        tools:layout="@layout/fragment_lekcija_container" />
</navigation>